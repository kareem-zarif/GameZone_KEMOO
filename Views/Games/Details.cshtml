@model Game 
@{
    ViewData["Title"] = Model.name;
}

<div class="card border-success bg-transparent text-white mt-5 rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="row ">
            <div class="col-md-8 px-5 py-2 d-flex flex-md-column justify-content-between">
                <div >
                    <h1 class="text-success fw-bold ">@Model.name</h1>
                    <span class="badge rounded-pill bg-light text-dark fs-5 mb-4">@Model.Category.name</span>
                    <p class="fs-5 text-success ">@Model.Description</p>
                </div>
                <div class="flex-column justify-content-start">
                    @foreach( var gameDevice in Model.GameDevices)
                    {
                        <i class="@gameDevice.Device.IconName ps-3 fs-3 "></i>
                    }
                </div>
            </div>
            <div class="col-md-4 ">
                <img class="w-100" src="@($"{FileSettings.ImgPathAfterRoot}/{Model.CoverName}")" alt="@($"{Model.name} pic")"  />
            </div>
        </div>
    </div>
</div>
 